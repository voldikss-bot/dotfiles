autocmd FileType yaml setlocal shiftwidth=2

nnoremap q           :q<CR>

nnoremap ;w          :w<CR>
nnoremap ;W          :wa<CR>
nnoremap ;N          *

nnoremap <C-l>       :bn<CR>
nnoremap <C-h>       :bp<CR>

nnoremap H           0
nnoremap L           $
nnoremap U           <C-r>
nnoremap Y           y$
nnoremap D           d$
nnoremap C           c$
nnoremap M           %

